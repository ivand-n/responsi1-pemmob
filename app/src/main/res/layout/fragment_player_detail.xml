<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F9FA"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_detail_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position: Midfielder"
                android:textSize="16sp"
                android:textColor="#34495E"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_detail_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nationality: Spain"
                android:textSize="16sp"
                android:textColor="#34495E"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_detail_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth Date: 15-07-1985"
                android:textSize="16sp"
                android:textColor="#34495E"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
